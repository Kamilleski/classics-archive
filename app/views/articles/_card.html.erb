<div class="card full-card" data-item-tags="<%= article.tags.map(&:name).join(',') %>">
  <% if article.featured? %>
    <div class="ribbon ribbon-top-right">
      <span title='<%= "article featured #{article.featured_date.strftime('%e %B %Y')}"%>'>
        Featured
      </span>
    </div>
  <% end %>
  <a href="<%= article.url %>" class="external-link" target="_blank">
    <img
      class="card-img-top"
      src="<%= article.image(:card_top) %>"
      alt='<%= "#{article.title} by #{article.author_full_name}" %>'
    />
  </a>
  <div>
    <div class="card-header">
      <a href="<%= article.url %>" class="link-body" target="_blank">
        <h4 class="card-title link-body">
          <%= article.title %>
          <br />
        </h4>
      </a>
      <label class="author">
        <input
          class="link-body"
          type="radio"
          name="filterrific[by_author]"
          value='<%= "#{article.author_first_name} #{article.author_last_name}" %>'
          id='<%= "filterrific_by_author_#{article.author_first_name} #{article.author_last_name}" %>'
          autoComplete="off"
          style="display:none">
        </input>
        by &nbsp
        <b>
          <%= article.author_first_name %> <%= article.author_last_name %>
        </b>
        &nbsp
        <i class="fa fa-user-circle author" aria-hidden="true"></i>
      </label>
      <br />
      <a class="published_time">
        <%= 'on ' %>
        <%= article.pretty_date %>
      </a>
      <p class="card-text link-body">
        <a href="<%= article.url %>" class="link-body" target="_blank">
          <%= article.description %>
          &nbsp
          <span class="glyphicon glyphicon-book" aria-hidden="true">
            <i class="fa fa-external-link" aria-hidden="true"></i>
          </span>
        </a>
      </p>
    </div>
    <div class="card-block inline">
      <% article.tags.each do |t| %>
        <%= render 'tag', tag: t %>
      <% end %>
    </div>
    <div class="card-footer">
      <a href='<%= "http://www.web.archive.org/#{article.wayback_id}" %>' target="_blank"  class="permanent-link">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/01/Wayback_Machine_logo_2010.svg/320px-Wayback_Machine_logo_2010.svg.png" />
        &nbsp
        <i class="fa fa-institution" aria-hidden="true"></i>
      </a>
      <label class="site_name pull-right">
        <i class="fa fa-newspaper-o site_name" aria-hidden="true"></i>
        &nbsp
        <input
          class="link-body"
          type="radio"
          name="filterrific[published_by]"
          value="<%= article.site_name %>"
          id='<%= "filterrific_published_by_#{article.site_name}" %>'
          autoComplete="off"
          style="display:none">
        </input>
        <%= article.site_name %>
      </label>
    </div>
  </div>
</div>
