<div id="banner" class="container">
  <% if featured_articles.length > 1 %>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% featured_articles.each_with_index do |_a, i| %>
        <% classs = i == 0 ? 'active' : '' %>
        <%= render 'indicator', i: i, classs: classs %>
        <% end %>
      </ol>
      <div class="carousel-inner text-center">
        <% featured_articles.each_with_index do |a, i| %>
          <% classs = i == 0 ? 'active' : '' %>
          <%= render 'featured_article', feat: a, classs: classs %>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <i class="fa fa-chevron-left fa-2x" aria-hidden="true" />
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <i class="fa fa-chevron-right fa-2x" aria-hidden="true" />
        <span class="sr-only">Next</span>
      </a>
    </div>
  <% else %>
    <div class="carousel-inner text-center">
      <% featured_articles.each_with_index do |a, i| %>
        <% classs = i == 0 ? 'active' : '' %>
        <%= render 'featured_article', feat: a, classs: classs %>
      <% end %>
    </div>
  <% end %>
</div>
