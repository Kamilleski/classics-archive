<% if @parsed[:wayback_id] %>
  <div class="alert alert-success">
    <%= f.hidden_field :wayback_id, value: @parsed[:wayback_id] %>
    <a href="http://www.web.archive.org<%= @parsed[:wayback_id] %>" target="_blank">
      Article archived in Wayback Machine
      <i class="fa fa-external-link" aria-hidden="true"></i>
    </a>
  </div>
<% else %>
  <div class="alert alert-warning">
    <%= f.hidden_field :wayback_id, value: @wayback_id %>
    <a href="http://www.web.archive.org<%= @wayback_id %>" target="_blank">
      Article archived in Wayback Machine
      <i class="fa fa-external-link" aria-hidden="true"></i>
    </a>
  </div>
<% end %>
